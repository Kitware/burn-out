activity_detector:activity_writer:filename = ltf_activities.txt

activity_detector:event_reader:events_filename = ${DATA_PATH}/ltf_events.dat

activity_detector:long_term_following_detector:minimum_chain_weight = 1.e-19
activity_detector:long_term_following_detector:minimum_event_weight = 1.e-17
activity_detector:long_term_following_detector:size_sigma = 2.0
activity_detector:long_term_following_detector:speed_sigma = 5.0
activity_detector:long_term_following_detector:time_sigma = 2.5
activity_detector:long_term_following_detector:direction_sigma = 0.3

activity_detector:track_reader:disabled = false
activity_detector:track_reader:filename = ${DATA_PATH}/ltf_tracks.dat
activity_detector:track_reader:format = kw18
activity_detector:track_reader:frequency = .5
activity_detector:track_reader:ignore_occlusions = true
activity_detector:track_reader:ignore_partial_occlusions = true

read_tracks_in_one_step = true
#   false: progressive mode, read tracks in steps.
#   true : batch mode, read tracks in one step.

activity_detector:long_term_following:disabled = false
activity_detector:long_term_following_link_local_following:disabled = true

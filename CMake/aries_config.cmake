#
# CMake configuration file to build VIDTK against an Aries (VIRAT
# system) build.  Designed to be used with cmake -C after when
# ARIES_TRUNK_HOME and ARIES_BUILD_VARIANT are set.
#

if( NOT ARIES_TRUNK_HOME )
  set(ARIES_TRUNK_HOME $ENV{ARIES_TRUNK_HOME})
endif()
if( NOT ARIES_BUILD_VARIANT )
  set(ARIES_BUILD_VARIANT $ENV{ARIES_BUILD_VARIANT})
endif()
set(ARIES_PREFIX ${ARIES_TRUNK_HOME}/${ARIES_BUILD_VARIANT})

set(BUILD_SHARED_LIBS ON CACHE BOOL "")
set(BUILD_TESTING OFF CACHE BOOL "")
set(VIDTK_BUILD_TESTS OFF CACHE BOOL "")
set(VIDTK_BUILD_TOOLS OFF CACHE BOOL "")
set(CPACK_BINARY_DEB OFF CACHE BOOL "")
set(CPACK_BINARY_NSIS OFF CACHE BOOL "")
set(CPACK_BINARY_RPM OFF CACHE BOOL "")
set(CPACK_BINARY_STGZ OFF CACHE BOOL "")
set(CPACK_BINARY_TBZ2 OFF CACHE BOOL "")
set(CPACK_BINARY_TGZ ON CACHE BOOL "")
set(CPACK_BINARY_TZ OFF CACHE BOOL "")
set(CPACK_SOURCE_TBZ2 OFF CACHE BOOL "")
set(CPACK_SOURCE_TGZ OFF CACHE BOOL "")
set(CPACK_SOURCE_TZ OFF CACHE BOOL "")
set(CPACK_SOURCE_ZIP OFF CACHE BOOL "")
set(CMAKE_BUILD_TYPE Release CACHE STRING "")
set(CMAKE_INSTALL_PREFIX ${ARIES_PREFIX}/vidtk CACHE PATH "")
set(VXL_DIR ${ARIES_PREFIX}/share/vxl/cmake CACHE PATH "")
set(BOOST_ROOT ${ARIES_PREFIX} CACHE PATH "")
set(BOOST_INCLUDEDIR ${ARIES_PREFIX}/include CACHE PATH "")
set(BOOST_LIBRARYDIR ${ARIES_PREFIX}/lib CACHE PATH "")
set(USE_SYSTEM_CPPDB OFF CACHE BOOL "")
set(USE_SYSTEM_SQLite3 ON CACHE BOOL "")
set(SQLite3_INCLUDE_DIR ${ARIES_PREFIX}/include CACHE PATH "")
set(SQLite3_LIBRARY ${ARIES_PREFIX}/lib/libsqlite3.so CACHE FILEPATH "")
set(USE_SYSTEM_GeographicLib ON CACHE BOOL "")
set(GeographicLib_INCLUDE_DIR ${ARIES_PREFIX}/include CACHE PATH "")
set(GeographicLib_LIBRARY ${ARIES_PREFIX}/lib/libGeographic.so CACHE FILEPATH "")
set(USE_SYSTEM_TinyXML OFF CACHE BOOL "")
set(USE_SYSTEM_SHAPELIB OFF CACHE BOOL "")
